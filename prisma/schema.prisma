generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user_auth {
  id       Int    @id @default(autoincrement())
  email    String @unique
  acc_type String
  password String
  jobs     jobs[]  @relation("UserJobs")
}


model jobs {
  id       Int    @id @default(autoincrement())
  recruiterId Int
  recruiter   user_auth @relation("UserJobs", fields: [recruiterId], references: [id])
  companyName String
  jobTitle    String
  description   String
  location    String
  salary    String
  experience    String
  createdAt   DateTime @default(now())
}
